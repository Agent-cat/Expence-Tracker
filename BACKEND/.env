# Expense App - Docker Environment Configuration

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=vishnu
POSTGRES_DB=expense_db
POSTGRES_PORT=5432

# Spring Boot Configuration
SPRING_APPLICATION_NAME=expense-app
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/expense_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=vishnu
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# JWT Configuration
JWT_SECRET=mySecretKeyForExpenseAppThatIsLongEnoughForHS256Algorithm
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8081
BACKEND_PORT=8081

# Docker Configuration
COMPOSE_PROJECT_NAME=expense-app
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
